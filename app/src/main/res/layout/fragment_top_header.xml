<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/setting_header_height"
    android:layout_marginLeft="@dimen/header_padding_left"
    android:layout_marginRight="@dimen/header_padding_right"

    tools:context="fsail.jp.otanews.fragment.TopHeaderFragment">

    <!--仮の設定ボタン-->
    <TextView
        android:id="@+id/confbtn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="←設定"
        android:textSize="15dp"
        android:gravity="center|left"
        />

    <!--仮の後読みボタン-->
    <TextView
        android:id="@+id/laterbtn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="←あとよみ"
        android:textSize="15dp"
        android:gravity="center"
        />
</LinearLayout>
